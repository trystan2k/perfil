---
import { ClientRouter } from 'astro:transitions';
import { ErrorStateProviderWrapper } from '../components/ErrorStateProviderWrapper';
import { LanguageSwitcher } from '../components/LanguageSwitcher';
import { PwaUpdater } from '../components/PwaUpdater';
import { ThemeProvider } from '../components/ThemeProvider';
import { ThemeSwitcher } from '../components/ThemeSwitcher';
import { TranslationInitializer } from '../components/TranslationInitializer';
import type { SupportedLocale } from '../i18n/locales';
import { getTranslations, loadTranslations } from '../i18n/utils';
import '../styles/globals.css';
import '../styles/theme.css';

interface Props {
  title?: string;
}

const { title = 'Perfil' } = Astro.props;

// Get current locale from Astro's i18n routing
// This is automatically set by Astro's i18n routing
const currentLocale = (Astro.currentLocale || 'en') as SupportedLocale;

// Get current path for language switcher links
const currentPath = Astro.url.pathname;

// Load translations server-side for initial render
const translations = await loadTranslations(currentLocale);
const t = await getTranslations(currentLocale);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Perfil - {t(title)}</title>
    <ClientRouter />
  </head>
  <body>
    <ThemeProvider client:only="react">
      <TranslationInitializer locale={currentLocale} translations={translations} client:load />
      <ErrorStateProviderWrapper client:only="react">
        <a href="#main-content" class="skip-link">{t('layout.skipToMain')}</a>
        <header aria-label={t('layout.headerAriaLabel')}>
          <div class="header-controls">
            <ThemeSwitcher client:only="react" />
            <LanguageSwitcher
              currentLocale={currentLocale}
              currentPath={currentPath}
              ariaLabel={t('languageSwitcher.ariaLabel')}
              switchToLabel={t('languageSwitcher.switchTo')}
              client:load
            />
          </div>
        </header>
        <main id="main-content">
          <slot />
        </main>
        </ErrorStateProviderWrapper>
    </ThemeProvider>
    <PwaUpdater client:load />
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	header {
		position: sticky;
		top: 0;
		z-index: 50;
		background-color: hsl(var(--card));
		border-bottom: 1px solid hsl(var(--border));
		padding: 0.5rem 1rem;
		display: flex;
		justify-content: flex-end;
		box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    height: var(--header-height);
	}

	.header-controls {
		display: flex;
		gap: 1rem;
		align-items: center;
	}
</style>
