---
import { ClientRouter } from 'astro:transitions';
import { pwaInfo } from 'virtual:pwa-info';
import { CompactHeaderWithProviders } from '../components/CompactHeaderWithProviders';
import { ErrorStateProviderWrapper } from '../components/ErrorStateProviderWrapper';
import { PwaUpdater } from '../components/PwaUpdater';
import type { SupportedLocale } from '../i18n/locales';
import { getTranslateFunction, type TranslationValue } from '../i18n/utils';
import { THEME_COLORS } from '../lib/theme-colors';
import '../styles/globals.css';
import '../styles/theme.css';

interface Props {
  title?: string;
  translations?: TranslationValue;
}

const { title = 'Perfil', translations = {} } = Astro.props;

// Get current locale from Astro's i18n routing
// This is automatically set by Astro's i18n routing
const currentLocale = (Astro.currentLocale || 'en') as SupportedLocale;

// Get current path for language switcher links
const currentPath = Astro.url.pathname;

const t = getTranslateFunction(translations, currentLocale);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="theme-color" content={THEME_COLORS.light} />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Perfil - {t(title)}</title>
    {pwaInfo && <link rel="manifest" href={pwaInfo.webManifest.href} />}
    <ClientRouter />
  </head>
  <body>
    <ErrorStateProviderWrapper locale={currentLocale} translations={translations} client:load>
      <a href="#main-content" class="skip-link">{t('layout.skipToMain')}</a>
      <CompactHeaderWithProviders
        client:load
        locale={currentLocale}
        currentPath={currentPath}
        translations={translations}
        settingsAriaLabel={t('compactHeader.settingsAriaLabel')}
        settingsTitle={t('compactHeader.settingsTitle')}
        drawerTitle={t('settingsSheet.title')}
        drawerCloseAriaLabel={t('settingsSheet.closeAriaLabel')}
        themeLabel={t('compactHeaderWithProviders.themeLabel')}
        languageLabel={t('compactHeaderWithProviders.languageLabel')}
        enableAutoHide={false}
      />
      <main id="main-content">
        <slot />
      </main>
    </ErrorStateProviderWrapper>
    <PwaUpdater client:idle locale={currentLocale} translations={translations} />
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<script>
import { getThemeFromStorage, THEMES, updateSelectedTheme } from "../hooks/useTheme";


const theme = getThemeFromStorage();
if (theme) {
  updateSelectedTheme(theme);
} else {
  updateSelectedTheme(THEMES.system);
}
</script>
