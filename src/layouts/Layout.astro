---
import { ClientRouter } from 'astro:transitions';
import { pwaInfo } from 'virtual:pwa-info';
import { ErrorStateProviderWrapper } from '../components/ErrorStateProviderWrapper.tsx';
import { Header } from '../components/Header.tsx';
import { PwaUpdater } from '../components/PwaUpdater.tsx';
import type { SupportedLocale } from '../i18n/locales.ts';
import { getTranslateFunction, type TranslationValue } from '../i18n/utils.ts';
import { THEME_COLORS } from '../lib/theme-colors.ts';
import '../styles/globals.css';
import '../styles/theme.css';

interface Props {
  title?: string;
  translations?: TranslationValue;
}

const { title = 'Perfil', translations = {} } = Astro.props;

// Get current locale from Astro's i18n routing
// This is automatically set by Astro's i18n routing
const currentLocale = (Astro.currentLocale || 'en') as SupportedLocale;

// Get current path for language switcher links
const currentPath = Astro.url.pathname;

const t = getTranslateFunction(translations, currentLocale);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <script is:inline>
      // CRITICAL: Prevent theme flash - must run BEFORE any CSS loads
      // This is the highest priority script in the document
      (function() {
        try {
          const STORAGE_KEY = 'perfil-theme';
          const DARK_THEME = 'dark';
          const LIGHT_THEME = 'light';
          const SYSTEM_THEME = 'system';

          // Get stored theme or detect system preference
          const storedTheme = localStorage.getItem(STORAGE_KEY);
          const systemPrefersDark = matchMedia('(prefers-color-scheme: dark)').matches;

          // Determine actual theme to apply
          let themeToApply = LIGHT_THEME;
          if (storedTheme === DARK_THEME) {
            themeToApply = DARK_THEME;
          } else if (storedTheme === SYSTEM_THEME || !storedTheme) {
            themeToApply = systemPrefersDark ? DARK_THEME : LIGHT_THEME;
          }

          // Apply theme IMMEDIATELY to document root
          const html = document.documentElement;
          html.setAttribute('data-theme', themeToApply);

          if (themeToApply === DARK_THEME) {
            html.classList.add(DARK_THEME);
          } else {
            html.classList.remove(DARK_THEME);
          }
        } catch (e) {
          // Fail silently
        }
      })();
    </script>
    <script is:inline>
      const setTheme = () => {
                try {
          const STORAGE_KEY = 'perfil-theme';
          const DARK_THEME = 'dark';
          const LIGHT_THEME = 'light';
          const SYSTEM_THEME = 'system';

          // Get stored theme or detect system preference
          const storedTheme = localStorage.getItem(STORAGE_KEY);
          const systemPrefersDark = matchMedia('(prefers-color-scheme: dark)').matches;

          // Determine actual theme to apply
          let themeToApply = LIGHT_THEME;
          if (storedTheme === DARK_THEME) {
            themeToApply = DARK_THEME;
          } else if (storedTheme === SYSTEM_THEME || !storedTheme) {
            localStorage.setItem(STORAGE_KEY, SYSTEM_THEME);
            themeToApply = systemPrefersDark ? DARK_THEME : LIGHT_THEME;
          }

          // Apply theme IMMEDIATELY to document root
          const html = document.documentElement;
          html.setAttribute('data-theme', themeToApply);

          if (themeToApply === DARK_THEME) {
            html.classList.add(DARK_THEME);
          } else {
            html.classList.remove(DARK_THEME);
          }
        } catch (e) {
          // Fail silently
        }
      }
      // CRITICAL: Restore theme after view transitions
      // Astro's view transitions can clear HTML attributes, so we need to restore them
      // document.addEventListener('astro:after-swap', () => {
      //   setTheme();
      // });

      setTheme();
    </script>
    <script is:inline>
      // CRITICAL: Persist locale preference across sessions
      // This script runs early to ensure locale preference is applied before any rendering
      (function () {
        try {
          const STORAGE_KEY = 'perfil-locale';
          const SUPPORTED_LOCALES = ['en', 'es', 'pt-BR'];
          const FALLBACK_LOCALE = 'en';

          // Get the persisted locale from storage if available
          const storedLocale = localStorage.getItem(STORAGE_KEY);

          // Validate that stored locale is in supported locales
          const isValidLocale = storedLocale && SUPPORTED_LOCALES.includes(storedLocale);
          const persistedLocale = isValidLocale ? storedLocale : null;

          // Get current locale from URL pathname
          const pathParts = window.location.pathname.split('/').filter(Boolean);
          const urlLocale =
            pathParts.length > 0 && SUPPORTED_LOCALES.includes(pathParts[0])
              ? pathParts[0]
              : FALLBACK_LOCALE;

          // If there's a persisted locale that differs from URL, update lang attribute
          if (persistedLocale && persistedLocale !== urlLocale) {
            // Note: We can't change the URL here without a navigation, but we can update
            // the document lang attribute for consistency
            document.documentElement.lang = persistedLocale;
          }
        } catch (e) {
          // Fail silently to avoid blocking page load
        }
      })();
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="theme-color" content={THEME_COLORS.light} />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Perfil - {t(title)}</title>
    {pwaInfo && <link rel="manifest" href={pwaInfo.webManifest.href} />}
    <ClientRouter />
  </head>
  <body>
    <a href="#main-content" class="skip-link">{t('layout.skipToMain')}</a>
    <Header
      client:load
      locale={currentLocale}
      currentPath={currentPath}
      translations={translations}
      enableAutoHide={false}
    />
    <main id="main-content">
      <slot />
    </main>
    <ErrorStateProviderWrapper locale={currentLocale} translations={translations} client:load />
    <PwaUpdater client:idle locale={currentLocale} translations={translations} />
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
	}
</style>
