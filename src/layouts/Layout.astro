---
import { ErrorStateProviderWrapper } from '../components/ErrorStateProviderWrapper';
import { I18nProvider } from '../components/I18nProvider';
import { LanguageSwitcher } from '../components/LanguageSwitcher';
import { PwaUpdater } from '../components/PwaUpdater';
import { ThemeProvider } from '../components/ThemeProvider';
import { ThemeSwitcher } from '../components/ThemeSwitcher';
import { FALLBACK_LOCALE } from '../i18n/locales';
import '../styles/globals.css';
import '../styles/theme.css';

interface Props {
  title?: string;
}

const { title = 'Perfil' } = Astro.props;

// For SSG, we can't access request headers or Astro.currentLocale
// Use fallback locale and let client-side i18next detect the user's language
const currentLocale = FALLBACK_LOCALE;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <ThemeProvider client:only="react">
      <I18nProvider client:only="react" locale={currentLocale}>
        <ErrorStateProviderWrapper client:only="react">
          <a href="#main-content" class="skip-link">Skip to main content</a>
          <header aria-label="Site header">
            <div class="header-controls">
              <ThemeSwitcher client:only="react" />
              <LanguageSwitcher client:only="react" />
            </div>
          </header>
          <main id="main-content">
            <slot />
          </main>
        </ErrorStateProviderWrapper>
      </I18nProvider>
    </ThemeProvider>
    <PwaUpdater client:load />
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	header {
		position: sticky;
		top: 0;
		z-index: 50;
		background-color: hsl(var(--background));
		border-bottom: 1px solid hsl(var(--border));
		padding: 0.5rem 1rem;
		display: flex;
		justify-content: flex-end;
	}

	.header-controls {
		display: flex;
		gap: 1rem;
		align-items: center;
	}
</style>
