---
import { I18nProvider } from '../components/I18nProvider';
import { PwaUpdater } from '../components/PwaUpdater';
import { FALLBACK_LOCALE } from '../i18n/locales';
import '../styles/globals.css';

interface Props {
  title?: string;
}

const { title = 'Perfil' } = Astro.props;

// For SSG, we can't access request headers or Astro.currentLocale
// Use fallback locale and let client-side i18next detect the user's language
const currentLocale = FALLBACK_LOCALE;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <I18nProvider client:only="react" locale={currentLocale}>
      <slot />
    </I18nProvider>
    <PwaUpdater client:load />
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
