---
import { ClientRouter } from 'astro:transitions';
import { pwaInfo } from 'virtual:pwa-info';
import { ErrorStateProviderWrapper } from '../components/ErrorStateProviderWrapper';
import { LanguageSwitcher } from '../components/LanguageSwitcher';
import { PwaUpdater } from '../components/PwaUpdater';
import { ThemeSwitcher } from '../components/ThemeSwitcher';
import type { SupportedLocale } from '../i18n/locales';
import { getTranslateFunction, type TranslationValue } from '../i18n/utils';
import '../styles/globals.css';
import '../styles/theme.css';

interface Props {
  title?: string;
  translations?: TranslationValue;
}

const { title = 'Perfil', translations = {} } = Astro.props;

// Get current locale from Astro's i18n routing
// This is automatically set by Astro's i18n routing
const currentLocale = (Astro.currentLocale || 'en') as SupportedLocale;

// Get current path for language switcher links
const currentPath = Astro.url.pathname;

const t = getTranslateFunction(translations, currentLocale);
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="theme-color" content="#f5f5f5" />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Perfil - {t(title)}</title>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    <ClientRouter />
  </head>
  <body>
    <ErrorStateProviderWrapper locale={currentLocale} translations={translations} client:load>
      <a href="#main-content" class="skip-link">{t('layout.skipToMain')}</a>
      <header aria-label={t('layout.headerAriaLabel')}>
        <div class="header-controls">
          <ThemeSwitcher client:idle locale={currentLocale} translations={translations} />
          <LanguageSwitcher
            currentLocale={currentLocale}
            currentPath={currentPath}
            locale={currentLocale}
            translations={translations}
            client:idle
          />
        </div>
      </header>
      <main id="main-content">
        <slot />
      </main>
    </ErrorStateProviderWrapper>
    <PwaUpdater client:idle locale={currentLocale} translations={translations} />
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	header {
		position: sticky;
		top: 0;
		z-index: 50;
		background-color: hsl(var(--card));
		border-bottom: 1px solid hsl(var(--border));
		padding: 0.5rem 1rem;
		display: flex;
		justify-content: flex-end;
		box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    height: var(--header-height);
	}

	.header-controls {
		display: flex;
		gap: 1rem;
		align-items: center;
	}
</style>

<script>
import { getThemeFromStorage, THEMES, updateSelectedTheme } from "../hooks/useTheme";


const theme = getThemeFromStorage();
if (theme) {
  updateSelectedTheme(theme);
} else {
  updateSelectedTheme(THEMES.system);
}

// Listen for system theme changes when using system theme
const systemThemeQuery = window.matchMedia('(prefers-color-scheme: dark)');
systemThemeQuery.addEventListener('change', () => {
  const currentTheme = getThemeFromStorage();
  if (!currentTheme || currentTheme === THEMES.system) {
    updateSelectedTheme(currentTheme || THEMES.system);
  }
});
</script>
