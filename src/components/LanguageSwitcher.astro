---
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLocale = Astro.currentLocale || 'en';

const locales = [
  { code: 'en', name: 'English', flag: 'ðŸ‡ºðŸ‡¸' },
  { code: 'es', name: 'EspaÃ±ol', flag: 'ðŸ‡ªðŸ‡¸' },
  { code: 'pt-BR', name: 'PortuguÃªs', flag: 'ðŸ‡§ðŸ‡·' },
];

// Get the current path without the locale prefix
const currentPath = Astro.url.pathname;
const pathWithoutLocale = currentPath.replace(/^\/(en|es|pt-BR)/, '') || '/';
---

<nav aria-label="Language selector" class="language-switcher">
	<ul class="locale-list">
		{
			locales.map((locale) => {
				const isActive = currentLocale === locale.code;
				const localeUrl = getRelativeLocaleUrl(locale.code, pathWithoutLocale);

				return (
					<li>
						<a
							href={localeUrl}
							aria-current={isActive ? 'page' : undefined}
							class:list={['locale-link', { active: isActive }]}
							aria-label={`Switch to ${locale.name}`}
						>
							<span class="locale-flag" aria-hidden="true">
								{locale.flag}
							</span>
							<span class="locale-name">{locale.name}</span>
						</a>
					</li>
				);
			})
		}
	</ul>
</nav>

<style>
	.language-switcher {
		display: flex;
		justify-content: center;
		padding: 1rem;
	}

	.locale-list {
		display: flex;
		gap: 0.5rem;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.locale-link {
		display: flex;
		align-items: center;
		gap: 0.375rem;
		padding: 0.5rem 1rem;
		border-radius: 0.375rem;
		text-decoration: none;
		color: hsl(var(--foreground));
		background-color: hsl(var(--background));
		border: 1px solid hsl(var(--border));
		transition: all 0.2s ease;
		font-size: 0.875rem;
		font-weight: 500;
	}

	.locale-link:hover {
		background-color: hsl(var(--accent));
		border-color: hsl(var(--accent));
	}

	.locale-link.active {
		background-color: hsl(var(--primary));
		color: hsl(var(--primary-foreground));
		border-color: hsl(var(--primary));
	}

	.locale-flag {
		font-size: 1.25rem;
		line-height: 1;
	}

	.locale-name {
		font-size: 0.875rem;
	}

	@media (max-width: 640px) {
		.locale-name {
			display: none;
		}

		.locale-link {
			padding: 0.5rem;
		}
	}
</style>
