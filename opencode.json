{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md", "docs/DEV_WORKFLOW.md"],
  "provider": {
    "github-copilot": {
      "models": {
        "claude-sonnet-4.5": {
          "limit": {
            "context": 256000,
            "output": 32000
          }
        }
      }
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "enabled": false
    },
    "task-master-ai": {
      "type": "local",
      "command": ["npx", "-y", "--package=task-master-ai", "task-master-ai"],
      "enabled": false
    },
    "basic-memory": {
      "type": "local",
      "command": ["uvx", "basic-memory", "mcp", "--project", "perfil"],
      "enabled": false,
    },
    "serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false",
        "--project",
        "perfil"
      ]
    }
  },
  "agent": {
    "documenter": {
      "mode":"primary",
      "model": "github-copilot/gpt-5-mini",
      "prompt": "You are a document writer. Focus on clear and concise documentation.",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "chrome-devtools": false,
        "task-master-ai": false,
        "context7": false,
        "repomix": false,
        "basic-memory": false,
        "github": false,
        "shadcn-ui": false,
        "playwright": false,
        "serena": false
    }
    }
  }
}
